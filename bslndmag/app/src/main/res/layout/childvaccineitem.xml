<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    app:cardUseCompatPadding="true"
    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        >
        <ProgressBar
            android:id="@+id/homeprogress"

            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"

            android:layout_marginTop="@dimen/fivedp"
            android:progress="50" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fivedp"
            android:textSize="@dimen/twentyfivesp"
            android:visibility="gone"
            android:textColor="@color/chocolate"
            android:textAlignment="center"
            tool:text="17-June-2020" />

<!--        <View-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="3dp"-->
<!--            android:background="@color/colorPrimary"/>-->
        <TextView
            android:id="@+id/tv_header"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/twentysp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/fivedp"
            tool:text="Reader Digest India" />

        <ImageView
            android:id="@+id/iv_announcements"
            android:layout_width="250dp"
            android:layout_height="325dp"
            android:layout_marginBottom="@dimen/tendp"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_marginRight="@dimen/tendp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/splash_screen"/>
        <RelativeLayout
            android:id="@+id/rl_buyandview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/twentydp"
            android:layout_marginRight="@dimen/twentydp"
            android:gravity="center_vertical"
            >
            <Button
            android:id="@+id/btn_buy"
                android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/tendp"
            android:layout_marginLeft="@dimen/tendp"
            android:layout_marginRight="@dimen/tendp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
            android:text="Purchase @40Rs-"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:background="@drawable/buttongreenroundui"
            />

            <Button
                android:id="@+id/btn_read"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/tendp"
                android:layout_marginLeft="@dimen/tendp"
                android:layout_marginRight="@dimen/tendp"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:background="@drawable/buttongreenroundui"
                android:text="Read"

                />
        </RelativeLayout>
 `   </LinearLayout>
</androidx.cardview.widget.CardView>
