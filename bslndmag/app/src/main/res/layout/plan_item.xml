<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <androidx.cardview.widget.CardView
       android:id="@+id/cv_plan"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="@dimen/tendp"
       >

       <LinearLayout
           android:id="@+id/ll_subscribe"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <androidx.appcompat.widget.AppCompatTextView
           android:id="@+id/tv_planname"
           android:visibility="visible"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/tendp"
           android:layout_marginRight="@dimen/tendp"
               android:layout_marginTop="@dimen/tendp"
           android:background="@color/white"
           android:paddingLeft="@dimen/fivedp"
           android:paddingBottom="@dimen/tendp"
           tool:text="@string/addfnf_english"
           android:textSize="@dimen/fifteensp" />

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_price"
               android:visibility="visible"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/fifteendp"
               android:background="@color/white"
              android:layout_marginTop="@dimen/tendp"
               android:textColor="@color/dodger_blue"
               android:paddingLeft="@dimen/fivedp"
               android:layout_alignParentRight="true"
               tool:text="@string/addfnf_english"
               android:textSize="@dimen/fifteensp" />


       </RelativeLayout>
           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/tv_subscribe"
               android:visibility="visible"
               android:layout_width="110dp"
               android:layout_height="30dp"
               android:layout_margin="@dimen/tendp"
               android:background="@drawable/buttongreenroundui"
               android:drawableRight="@drawable/ic_navigate_next"
               android:paddingLeft="@dimen/fivedp"
               android:layout_gravity="right"
               android:gravity="center"
               android:text="@string/subscribe_english"
               android:textColor="@color/black"
               android:textSize="@dimen/fifteensp" />
       </LinearLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>