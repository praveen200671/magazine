<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/buttonredui"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"

    xmlns:tool="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
android:visibility="gone"
        android:orientation="vertical"
        android:background="@drawable/buttongreenui_unselected"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/pv_pin_view_item_radius"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2.2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:text="@string/labelentermobileno" />

            <TextView
                android:id="@+id/tv_mobileno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="7.8"
                android:layout_marginTop="1dp"
                android:textSize="15dp"
                android:textColor="#000000"
                tool:text="9555595555" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/pv_pin_view_item_radius"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2.2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:text="@string/labelentermothername" />
            <TextView
                android:id="@+id/tv_mothername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="7.8"
                android:layout_marginTop="1dp"

                android:textSize="15dp"
                android:textColor="#000000"


                tool:text="Categorjhjkhkjhkjhjkhkhjkkjhy" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/pv_pin_view_item_radius"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_weight="2.2"
                android:textSize="15dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:text="@string/labelenterchildname" />
            <TextView
                android:id="@+id/tv_childname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="7.8"
                android:layout_marginTop="1dp"

                android:textSize="15dp"
                android:textColor="#000000"
                tool:text="hghjhjh" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginTop="@dimen/pv_pin_view_item_radius"
            android:layout_marginBottom="@dimen/nav_header_vertical_spacing"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="21dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="5"
                android:text="@string/labelinjection"

                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_injection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="5"
                android:layout_marginTop="1dp"
                android:textSize="20sp"
                android:paddingRight="10dp"
                android:gravity="end"
                android:textColor="@android:color/holo_blue_dark"
                android:text="@string/updatevaccination" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_searchmobileno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"

        android:layout_marginTop="@dimen/pv_pin_view_item_radius"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_search"

            android:layout_marginBottom="10dp"
            android:text="@string/entercorrectmobilenoormothername" />



    </LinearLayout>
</androidx.cardview.widget.CardView>
